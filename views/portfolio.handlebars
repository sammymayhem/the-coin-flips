{{#if hasPortfolio}}
<div id="open-pred-title">
    <h3>Your open predictions:</h3>
</div>

<div class="container">
    <div class="row">
        {{#each predictions}}
        <div class="card col-xl-4 m-2">
            <div class="card-body px-0" id="card-body" style="width: 100%">
                <h5 class="card-title" id="prediction-symbol">{{this.ticker}}</h5>
                <h6 class="card-subtitle mb-2 text-muted port-info"><span class="pred-label">Start Price/Date:&nbsp;&nbsp;&nbsp;</span>{{format_date this.start_price this.start_time}}</h6>
                <h6 class="card-subtitle mb-2 text-muted port-info"><span class="pred-label">Predicted Price/Date:&nbsp;&nbsp;&nbsp;</span>{{format_date this.predicted_price this.predicted_time}}</h6>
            </div>
        </div>
        {{/each}}
    </div>
</div>
{{else}}
<h2 id="open-pred-title">You need to make a prediction! Get goin!</h2>
{{/if}}
<button class="btn btn-outline-secondary predict-btn" type="submit" cursor="pointer"><a class="predict-btn" href="/predictions">Make a Prediction</a></button>