{{!-- Top menu button items --}}
<section class="top-menu">
    <div class="collapse" id="collapseExample">
        <div class="card card-body" id="nav-home-btn">
            <a href="/">Home</a>
        </div>
        <div class="card card-body" id="nav-predict-btn">
            <a href="/predictions">Predict</a>
        </div>
        <div class="card card-body" id="nav-portfolio-btn">
            <a href="/portfolio">Portfolio</a>
        </div>
        <div class="card card-body" id="nav-logout-btn">
            <a href="/api/users/logout">Logout</a>
        </div>
    </div>
</section>

<!-- Search bar for searching individual ticker symbols -->
<section class="search">
    <form>
        <div class="input-group mb-3">
            <input type="text" name="tickerText" class="form-control" id="ticker-text" placeholder="Ticker Symbol"
                aria-label="Ticker Symbol" aria-describedby="basic-addon2">
            <div class="input-group-append">
                <button class="btn btn-outline-secondary" type="submit" id="ticker-search"
                    cursor="pointer">Search</button>
            </div>
        </div>
    </form>
</section>

{{!-- Card shows after the search has been made --}}
{{#if active}}
<div class="container" id="predict-card">

    <h4 class="lead">Click in the open space to log a prediction!</h4>

    <div class="row">
        <div class="card" style="width: 70vw">
            <div class="card-body" id="card-body" style="width: 100%">
                <h5 class="card-title" id="ticker-symbol">{{ticker}}</h5>
                <h6 class="card-subtitle mb-2 text-muted" id="current-price"></h6>
                <canvas id="chart" width="90%"></canvas>
                <div id="prediction-preview"></div>
            </div>
        </div>
    </div>
</div>
{{/if}}

{{#if active}}
<script src="./js/chart.js"></script>
{{/if}}